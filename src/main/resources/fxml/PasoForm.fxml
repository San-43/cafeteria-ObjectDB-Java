<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cafeteria.cafeteria.controller.PasoFormController">
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>
                    <children>
                        <Label text="Receta:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="recetaCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Nombre del paso:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="nombreField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Descripción general:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextArea fx:id="descripcionArea" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <VBox spacing="8">
                    <Label text="Detalles del paso:"/>
                    <TextArea fx:id="detalleArea" prefRowCount="3" promptText="Descripción detallada del paso"/>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Agregar detalle" onAction="#onAddDetalle"/>
                        <Button text="Eliminar detalle" onAction="#onRemoveDetalle"/>
                    </HBox>
                    <ListView fx:id="detallesList" prefHeight="120"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar por:"/>
                    <ComboBox fx:id="searchFieldCombo" prefWidth="180"/>
                    <TextField fx:id="searchTextField" promptText="Escribe para buscar..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="pasosTable" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="70.0"/>
                        <TableColumn fx:id="recetaColumn" text="Receta" prefWidth="220.0"/>
                        <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="200.0"/>
                        <TableColumn fx:id="descripcionColumn" text="Descripción" prefWidth="250.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Listar" onAction="#onList"/>
            <Button text="Guardar" onAction="#onSave" defaultButton="true"/>
            <Button text="Actualizar" onAction="#onUpdate"/>
            <Button text="Eliminar" onAction="#onDelete"/>
            <Button text="Limpiar" onAction="#onClear"/>
        </HBox>
    </bottom>
</BorderPane>
