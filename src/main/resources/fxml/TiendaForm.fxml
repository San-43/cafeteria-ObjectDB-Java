<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cafeteria.cafeteria.controller.TiendaFormController">
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>
                    <children>
                        <Label text="Teléfono:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="telefonoField" promptText="771-000-0000" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="direccionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Empleado responsable:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="empleadoField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar por:"/>
                    <ComboBox fx:id="searchFieldCombo" prefWidth="180"/>
                    <TextField fx:id="searchTextField" promptText="Escribe para buscar..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="tiendasTable" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="70.0"/>
                        <TableColumn fx:id="telefonoColumn" text="Teléfono" prefWidth="140.0"/>
                        <TableColumn fx:id="direccionColumn" text="Dirección" prefWidth="220.0"/>
                        <TableColumn fx:id="empleadoColumn" text="Empleado responsable" prefWidth="220.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Guardar" onAction="#onSave" defaultButton="true"/>
            <Button text="Actualizar" onAction="#onUpdate"/>
            <Button text="Eliminar" onAction="#onDelete"/>
            <Button text="Limpiar" onAction="#onClear"/>
        </HBox>
    </bottom>
</BorderPane>