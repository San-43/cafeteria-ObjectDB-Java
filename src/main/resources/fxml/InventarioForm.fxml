<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cafeteria.cafeteria.controller.InventarioFormController"
            stylesheets="@../styles/app.css" styleClass="border-pane view-root">
    <center>
        <VBox spacing="15" styleClass="vbox form-container">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <GridPane styleClass="grid-pane form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>
                    <children>
                        <Label text="Tienda:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="tiendaCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Producto:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="productoCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Fecha ingreso:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="fechaIngresoPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Fecha consumo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="fechaConsumoPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Stock:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="stockField" promptText="0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Buscar por:"/>
                    <ComboBox fx:id="searchFieldCombo" prefWidth="160"/>
                    <TextField fx:id="searchTextField" promptText="Escribe para buscar..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="inventarioTable" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="150.0"/>
                        <TableColumn fx:id="tiendaColumn" text="Tienda" prefWidth="180.0"/>
                        <TableColumn fx:id="productoColumn" text="Producto" prefWidth="200.0"/>
                        <TableColumn fx:id="fechaIngresoColumn" text="Fecha ingreso" prefWidth="140.0"/>
                        <TableColumn fx:id="fechaConsumoColumn" text="Fecha consumo" prefWidth="140.0"/>
                        <TableColumn fx:id="stockColumn" text="Stock" prefWidth="100.0"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="hbox form-actions">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Listar" onAction="#onList"/>
            <Button text="Guardar" onAction="#onSave" defaultButton="true"/>
            <Button text="Actualizar" onAction="#onUpdate"/>
            <Button text="Eliminar" onAction="#onDelete"/>
            <Button text="Limpiar" onAction="#onClear"/>
        </HBox>
    </bottom>
</BorderPane>
