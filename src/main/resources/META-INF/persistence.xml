<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="CafeteriaPU" transaction-type="RESOURCE_LOCAL">
        <provider>com.objectdb.jpa.Provider</provider>

        <!-- Lista explícita de entidades (evita “Type X is not found”) -->
        <class>org.cafeteria.cafeteria.model.Tienda</class>
        <class>org.cafeteria.cafeteria.model.Producto</class>
        <class>org.cafeteria.cafeteria.model.Inventario</class>
        <class>org.cafeteria.cafeteria.model.Venta</class>
        <class>org.cafeteria.cafeteria.model.ProductoVendido</class>
        <class>org.cafeteria.cafeteria.model.Receta</class>
        <class>org.cafeteria.cafeteria.model.Paso</class>
        <class>org.cafeteria.cafeteria.model.Ingrediente</class>
        <class>org.cafeteria.cafeteria.model.ProporcionIngrediente</class>
        <class>org.cafeteria.cafeteria.model.InventarioIngredientes</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- crea ./data/cafeteria.odb si no existe -->
            <property name="jakarta.persistence.jdbc.url" value="objectdb:./data/cafeteria.odb"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
